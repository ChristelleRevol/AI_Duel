<% if user_signed_in? %>
<%= simple_form_for battle do |f| %>
<div class="container-form-new">
  <div class="row-1">
    <div class="row-1-left"> <div class="form-category"><%= f.input :category, as: :radio_buttons, collection: ["Content generation", "Research", "Discussion", "Mathematics", "Image generation"], checked: "Content generation", class: "new-category"%></div></div>
    <div class="row-1-right">
      <div class="datepicker"><%= f.input :end_date, as: :string,
        input_html: {
          data: { controller: "datepicker"},
          placeholder: Date.today,
          } %></div>
      <div class="prompt"><%= f.input :prompt, label: 'Enter your prompt here' %></div>
    </div>
  </div>
  <div class="row-2">
    <div class="button"><%= f.button :submit, 'Battle now !', class: 'start-button' %></div>
  </div>
</div>


  <% end %>
<% else %>
<div class="container">
<div class="connect-box">
  <p>Wait a minute..ğŸ˜’ <br> You need an account in order to start a battle.</p>
  <%= link_to "Log in", new_user_session_path, class: "btn btn-primary" %>
</div>
</div>
<% end %>
