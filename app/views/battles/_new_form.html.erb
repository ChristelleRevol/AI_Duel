<% if user_signed_in? %>
<%= simple_form_for battle do |f| %>
    <div class="d-flex justify-content-between">
      <%= f.input :category, as: :radio_buttons, collection: ["research", "image generation", "content generation", "discussion", "mathematics"]%>
      <%= f.input :end_date, as: :string,
        input_html: {
          data: { controller: "datepicker" },
          placeholder: Date.today
          } %>
    </div>
    <%= f.input :prompt, label: 'Enter your prompt here' %>
    <%= f.button :submit, 'Battle now !', class: 'btn btn-primary' %>
  <% end %>
<% else %>
<div class="container">
<div class="connect-box">
  <p>Wait a minute..ğŸ˜’ <br> You need an account in order to start a battle.</p>
  <%= link_to "Log in", new_user_session_path, class: "btn btn-primary" %>
</div>
</div>
<% end %>
